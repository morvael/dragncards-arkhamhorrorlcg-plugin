{
    "automation": {
        "cards": {
            "08004": { //Norman Withers: The Astronomer
                "rules": [
                    {
                        "type": "passive",
                        "listenTo": ["/cardById/$THIS_ID/inPlay"],
                        "condition": ["AND",
                            ["EQUAL", "$THIS.inPlay", true],
                            ["IS_VALID_PLAYER", "$THIS.controller"]
                        ],
                        "onDo": [
                            ["INCREASE_VAL", "/playerData/$THIS.controller/arkhamPlayWithTopDeckCardRevealed", 1]
                        ],
                        "offDo": [
                            ["DECREASE_VAL", "/playerData/$THIS.controller/arkhamPlayWithTopDeckCardRevealed", 1]
                        ]
                    }
                ]
            },
