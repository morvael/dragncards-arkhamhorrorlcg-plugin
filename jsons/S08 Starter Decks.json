            "08004": { //Norman Withers: The Astronomer
                "rules": {
                    "08004a": { //Play with the top card of your deck revealed.
                        "type": "passive",
                        "priority": 10,
                        "listenTo": ["/cardById/$THIS_ID/inPlay"],
                        "condition": ["TRIGGER_IN_PLAY", "$THIS"],
                        "onDo": [
                            ["COND",
                                ["IS_PASSIVE_CARD_ABILITY_OFF", "$THIS"],
                                [
                                    ["PASSIVE_CARD_ABILITY_ON", "$THIS"],                            
                                    ["DO_FLOG", "{0:C} - Play with the top card of your deck revealed.", ["LIST", "$THIS"]],
                                    ["INCREASE_VAL", "/playerData/$THIS.controller/arkhamPlayWithTopDeckCardRevealed", 1]
                                ]
                            ]
                        ],
                        "offDo": [
