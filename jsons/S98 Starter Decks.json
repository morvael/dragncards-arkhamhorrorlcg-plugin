{
    "automation": {
        "cards": {
            "98019": { //Gloria Goldberg: The Writer (promo)
                "rules": [
                    {
                        "type": "passive",
                        "listenTo": ["/cardById/$THIS_ID/inPlay"],
                        "condition": ["AND",
                            ["EQUAL", "$THIS.inPlay", true],
                            ["IS_VALID_PLAYER", "$THIS.controller"]
                        ],
                        "onDo": [
                            ["SET", "/arkhamCustomMythosPhasePlayerOrderController", "$THIS.controller"]
                        ],
                        "offDo": [
                            ["SET", "/arkhamCustomMythosPhasePlayerOrderController", null]
                        ]
                    }
                ]
            }
        }
    }
}