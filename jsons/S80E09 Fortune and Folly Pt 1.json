    "functions": {
        "FORTUNE_AND_FOLLY_PT_1_SHOW_ROLE_CHOICE": {
            "args": ["$TARGET_PLAYER"],
            "code": [
                ["VALIDATE_PLAYER", "$TARGET_PLAYER", "FORTUNE_AND_FOLLY_PT_1_SHOW_ROLE_CHOICE.TARGET_PLAYER"],
                ["PROMPT", "$TARGET_PLAYER", "fortuneAndFollyPt1ChooseRole"],
                ["COND",
                    ["EQUAL", ["GET_NAMED_CARD_ID", "88028"], null], //The Face
                    ["PROMPT_ADD_OPTION", "$TARGET_PLAYER", "The Face", "F", ["LIST", "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE", "{{$TARGET_PLAYER}}", "The Face", "88028"]]
                ],
                ["COND",
                    ["EQUAL", ["GET_NAMED_CARD_ID", "88029"], null], //The Muscle
                    ["PROMPT_ADD_OPTION", "$TARGET_PLAYER", "The Muscle", "M", ["LIST", "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE", "{{$TARGET_PLAYER}}", "The Muscle", "88029"]]
                ],
                ["COND",
                    ["EQUAL", ["GET_NAMED_CARD_ID", "88030"], null], //The Thief
                    ["PROMPT_ADD_OPTION", "$TARGET_PLAYER", "The Thief", "T", ["LIST", "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE", "{{$TARGET_PLAYER}}", "The Thief", "88030"]]
                ],
                ["COND",
                    ["EQUAL", ["GET_NAMED_CARD_ID", "88031"], null], //The Grifter
                    ["PROMPT_ADD_OPTION", "$TARGET_PLAYER", "The Grifter", "G", ["LIST", "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE", "{{$TARGET_PLAYER}}", "The Grifter", "88031"]]
                ]
            ]
        },
        "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE": {
            "args": ["$TARGET_PLAYER", "$CHOICE_NAME", "$CHOICE_DATABASE_ID"],
            "code": [
                ["VALIDATE_PLAYER", "$TARGET_PLAYER", "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE.TARGET_PLAYER"],
                ["VALIDATE_NOT_EMPTY", "$CHOICE_NAME", "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE.CHOICE_NAME"],
                ["VALIDATE_NOT_EMPTY", "$CHOICE_DATABASE_ID", "FORTUNE_AND_FOLLY_PT_1_ROLE_CHOICE_DONE.CHOICE_DATABASE_ID"],
                ["LOGF", "{0} picks {1} role.", "$TARGET_PLAYER", "$CHOICE_NAME"],
                ["DO_CREATE_CARDS", "$TARGET_PLAYER", "$CHOICE_NAME", "$CHOICE_DATABASE_ID", 1, ["GET_CONTROLLER_PLAY", "$TARGET_PLAYER"], true, null],
                ["INCREASE_VAL", "/playerData/$TARGET_PLAYER/arkham/scenarioFortuneAndFollyPt1RolesTaken", 1],
                ["VAR", "$NEXT_PLAYER", ["NEXT_PLAYER", "$TARGET_PLAYER"]],
                ["COND",
                    ["AND",
                        ["EQUAL", "$NEXT_PLAYER", "$GAME.firstPlayer"],
                        ["OR",
                            ["GREATER_THAN", "$GAME.arkham.numPlayers", 1],
                            ["GREATER_EQUAL", "$GAME.playerData.$NEXT_PLAYER.arkham.scenarioFortuneAndFollyPt1RolesTaken", 2]
                        ]
                    ],
                    ["ACTION_LIST", "Fortune and Folly Pt 1 Scenario Init Continue"],
                    ["TRUE"],
                    ["FORTUNE_AND_FOLLY_PT_1_SHOW_ROLE_CHOICE", "$NEXT_PLAYER"]
                ]
            ]
        }
    },
